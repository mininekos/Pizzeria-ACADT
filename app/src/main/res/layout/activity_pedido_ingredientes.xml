<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitysPedido.PedidoIngredientes">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="152dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/Usuario_"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUsuarioRegistradoIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="140dp"
        android:text="@string/Verduras"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/lechuga" />

        <CheckBox
            android:id="@+id/cbLechuga"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Lechuga"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/tomate" />

        <CheckBox
            android:id="@+id/cbTomate"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Tomate"
            app:layout_column="3"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/cebolla" />

        <CheckBox
            android:id="@+id/cbCebolla"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Cebolla"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/col" />

        <CheckBox
            android:id="@+id/cbCol"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Col"
            app:layout_column="3"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/maiz" />

        <CheckBox
            android:id="@+id/cbMaiz"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Maiz"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/aceitunas" />

        <CheckBox
            android:id="@+id/cbAceituna"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Aceitunas"
            app:layout_column="3"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="33dp"
        android:text="@string/Extras"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="412dp"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/mozzarella" />

        <CheckBox
            android:id="@+id/cbMozzarrella"
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:text="@string/Mozzarella"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/feta" />

        <CheckBox
            android:id="@+id/cbFeta"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Feta"
            app:layout_column="3"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/patatas_fritas" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/huevo" />

        <CheckBox
            android:id="@+id/cbPatatas"
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:text="@string/Patatas"
            app:layout_column="1"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/cbHuevo"
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:text="@string/Huevo"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/carne_kebab" />

        <CheckBox
            android:id="@+id/cbCarne"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/Extra_Carne"
            app:layout_column="3"
            app:layout_row="1"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="773dp" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/btnVolverIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIrCarritoIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="32dp"
        android:text="@string/Carrito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVolverIngredientes" />

</androidx.constraintlayout.widget.ConstraintLayout>